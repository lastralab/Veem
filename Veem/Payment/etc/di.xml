<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PaymentFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Veem\Payment\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Veem\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaymentValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PaymentCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Veem\Payment\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PaymentConfig -->
    <virtualType name="PaymentLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </virtualType>

    <type name="Veem\Payment\Gateway\Http\Client\Client">
        <arguments>
            <argument name="logger" xsi:type="object">PaymentLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PaymentCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PaymentAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PaymentCaptureCommand</item>
                <item name="void" xsi:type="string">PaymentVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PaymentAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaymentAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PaymentResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Veem\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Veem\Payment\Gateway\Http\Client\Client</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PaymentAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Veem\Payment\Gateway\Request\AuthorizationRequest</item>
                <item name="Data" xsi:type="string">Veem\Payment\Gateway\Request\DataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Veem\Payment\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PaymentCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Veem\Payment\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Veem\Payment\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Veem\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Veem\Payment\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Veem\Payment\Gateway\Http\Client\Client</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Veem\Payment\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PaymentVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Veem\Payment\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Veem\Payment\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Veem\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Veem\Payment\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Veem\Payment\Gateway\Http\Client\Client</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Veem\Payment\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PaymentResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Veem\Payment\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Veem\Payment\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PaymentValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaymentConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PaymentConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </virtualType>

    <type name="Veem\Payment\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PaymentConfig</argument>
        </arguments>
    </type>

</config>

